<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrowMeClass.ToiletPage"
             BackgroundColor="#6b9dc2">

    <StackLayout>

        <Label Text="Toilet Time"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   TextColor="#333333"
                   FontAttributes="Bold"
                   FontSize="30"
                   />

          <Image x:Name="plantImage" VerticalOptions="CenterAndExpand" Source="toilet"/>

            <ImageButton 
                   HorizontalOptions="CenterAndExpand"
                     Source="water_button"
                     WidthRequest="75"
                     HeightRequest="75"
                     CornerRadius="10"
                     BackgroundColor="White"
             Margin="5, 10, 10, 40"
                    Clicked="MainButtonClicked">
                   </ImageButton>
                   
            </StackLayout>
</ContentPage>
